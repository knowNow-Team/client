<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 체크박스 해제 상태 -->
    <item android:state_checked="false">
        <shape>
            <stroke android:color="@color/bw_g0" android:width="1dp" />
            <corners android:radius="13dp" />
            <solid android:color="@color/bw_g0" />
        </shape>
    </item>
    <!-- 체크박스 선택 상태 -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="15dp" />
                    <corners android:radius="13dp" />
                    <solid android:color="@color/colorSub"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>