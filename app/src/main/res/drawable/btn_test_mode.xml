<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false" android:color="@color/bw_g6">
        <shape>
            <stroke android:color="@color/bw_g0" android:width="1dp" />
            <corners android:radius="6dp" />
            <solid android:color="@color/bw_g0" />
        </shape>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true" android:color="@color/black">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="15dp" />
                    <solid android:color="@color/colorSub"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>



