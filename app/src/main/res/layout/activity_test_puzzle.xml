<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_quiz_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 / 54"
        style="@style/FontBodyBold2"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_quiz_section"
        />

    <ImageButton
        android:id="@+id/ib_puzzle_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_quiz_section"
        android:background="@drawable/ic_redo"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_quiz_section"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tv_quiz_num"
        app:layout_constraintBottom_toTopOf="@+id/cl_button_section"
        >

        <ImageButton
            android:id="@+id/ib_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_left"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_puzzle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_puzzle_kor"
            android:layout_marginRight="100dp"
            android:backgroundTint="@color/colorMain"
            />


        <TextView
            android:id="@+id/tv_puzzle_kor"
            style="@style/FontHeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="단어 뜻"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_puzzle"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/ll_puzzle"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="30dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <LinearLayout
                android:id="@+id/ll_blank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:layout_weight="2"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/ic_right"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_puzzle"
            app:layout_constraintLeft_toRightOf="@+id/tv_puzzle_kor"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/colorMain"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_button_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bw_g1"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_spelling"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:alignmentMode="alignBounds"
            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_submit"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/btn_submit"
            android:text="제출하기"
            style="@style/FontBody2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>