    <ImageView
        android:id="@+id/iv_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_folder" />

    <TextView
        android:id="@+id/tv_groups_name"
        style="@style/FontBody2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="단어장 이름"
        app:layout_constraintEnd_toEndOf="@+id/iv_groups"
        app:layout_constraintStart_toStartOf="@+id/iv_groups"
        app:layout_constraintTop_toBottomOf="@+id/iv_groups" />

    <TextView
        android:id="@+id/tv_words_count"
        style="@style/FontCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="TextView" />
</LinearLayout>