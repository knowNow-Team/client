<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="9dp"
    android:background="@color/colorMain">

    <LinearLayout
        android:id="@+id/ll_ranking_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginVertical="15dp"
        >

        <TextView
            android:id="@+id/tv_date"
            style="@style/FontCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center_horizontal"
            android:text="기간 2021.04.12~"
            android:textAlignment="center"
            android:textColor="@color/bw_g3" />

        <TextView
            android:id="@+id/tv_ranking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ranking_most_test"
            android:textColor="@color/white"
            android:textAlignment="center"
            style="@style/FontBold1"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_ranking_info"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:id="@+id/ll_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ll_1st"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/white_radius_rect"
            android:orientation="vertical"
            android:paddingHorizontal="7dp"
            android:paddingVertical="20dp"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_2nd"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_silver"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_2nd_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lv. 3"
                android:textColor="@color/colorMain"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_2nd_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FontBold2"
                android:text="2. 닉네임"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/white_radius_rect"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="30dp"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_1st"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_gold"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_1st_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lv. 3"
                android:textColor="@color/colorMain"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_1st_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FontBold2"
                android:text="1. 닉네임"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ll_1st"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/white_radius_rect"
            android:orientation="vertical"
            android:paddingHorizontal="7dp"
            android:paddingVertical="20dp"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_3rd"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_bronze"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_3rd_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lv. 3"
                android:textColor="@color/colorMain"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_3rd_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FontBold2"
                android:text="3. 닉네임"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>