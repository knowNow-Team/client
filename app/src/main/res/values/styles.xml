<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 타이틀 (맨 위 )-->
    <style name="FontHeadLine">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Font1 - 제목-->
    <style name="FontBold1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>

    <!-- Font2 - 부제목 -->
    <style name="FontBold2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="Font2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>


    <!-- Font3 - 버튼에 주로 사용 -->
    <style name="FontBold3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bw_g6</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="Font3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bw_g6</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>


    <!-- 내용 -->
    <style name="FontBody1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="FontBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>

    <!-- 젤 작음-->
    <style name="FontCaption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/bw_g6</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

</resources>